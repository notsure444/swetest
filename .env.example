# Environment Configuration Template
# Copy this file to .env and update the values for your specific setup

# =============================================================================
# CORE SYSTEM CONFIGURATION
# =============================================================================

# Environment (development, testing, staging, production)
NODE_ENV=development

# System identification
SYSTEM_ID=autonomous_ai_agent_platform
INSTANCE_ID=local_development

# =============================================================================
# CONVEX BACKEND CONFIGURATION
# =============================================================================

# Convex deployment URL
CONVEX_URL=http://localhost:3210
CONVEX_DEPLOYMENT=your-deployment-name

# Convex authentication (if using Convex Cloud)
# CONVEX_DEPLOY_KEY=your-deploy-key-here

# =============================================================================
# AI SERVICE INTEGRATIONS
# =============================================================================

# OpenAI GPT-5 Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7
OPENAI_RATE_LIMIT_PER_MINUTE=60

# Anthropic Claude 4.1 Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4000
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_RATE_LIMIT_PER_MINUTE=50

# Default LLM Provider (gpt|claude|auto)
DEFAULT_LLM_PROVIDER=auto
LLM_FALLBACK_ENABLED=true

# =============================================================================
# PROJECT ISOLATION CONFIGURATION  
# =============================================================================

# Project workspace settings
PROJECTS_BASE_DIR=./projects
MAX_CONCURRENT_PROJECTS=10
PROJECT_ISOLATION_LEVEL=high

# Container configuration
DOCKER_HOST=unix:///var/run/docker.sock
BASE_PROJECT_PORT=4000
CONTAINER_REGISTRY_URL=localhost:5000

# Resource limits
DEFAULT_MEMORY_LIMIT=1G
DEFAULT_CPU_LIMIT=1.0
DEFAULT_STORAGE_LIMIT=5G
MAX_MEMORY_LIMIT=8G
MAX_CPU_LIMIT=4.0
MAX_STORAGE_LIMIT=50G

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary database (if using external database)
DATABASE_URL=postgresql://username:password@localhost:5432/ai_agent_platform
DATABASE_MIN_CONNECTIONS=2
DATABASE_MAX_CONNECTIONS=20

# Redis configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Log configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/system.log
LOG_MAX_FILE_SIZE=10M
LOG_MAX_FILES=10

# Enable detailed agent logging
AGENT_LOGGING_ENABLED=true
AGENT_DEBUG_MODE=false

# Metrics and monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# External monitoring services
# SENTRY_DSN=https://your-sentry-dsn-here
# DATADOG_API_KEY=your-datadog-api-key-here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Authentication and authorization
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-key-change-this-in-production
API_KEY_LENGTH=32

# Encryption
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data
ENCRYPT_SENSITIVE_DATA=true

# Security settings
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_RATE_LIMITING=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Web search and research services
SERPAPI_KEY=your_serpapi_key_for_web_search
TAVILY_API_KEY=your_tavily_api_key_for_research

# Code analysis and quality services
SONARQUBE_TOKEN=your_sonarqube_token
CODECLIMATE_API_KEY=your_codeclimate_api_key

# Notification services
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-slack-webhook
EMAIL_SERVICE_API_KEY=your_email_service_api_key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Cloud storage (for large files and backups)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=ai-agent-platform-storage

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Hot reload and development
HOT_RELOAD_ENABLED=true
WATCH_FILES=true
DEV_SERVER_PORT=3000
DEV_SERVER_HOST=0.0.0.0

# API development
API_BASE_URL=http://localhost:3000/api
API_VERSION=v1
ENABLE_API_DOCS=true

# Testing configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/ai_agent_platform_test
TEST_TIMEOUT=30000
COVERAGE_THRESHOLD=80
E2E_BASE_URL=http://localhost:3000

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================

# Dashboard settings
DASHBOARD_PORT=3001
DASHBOARD_HOST=0.0.0.0
DASHBOARD_BASE_URL=http://localhost:3001

# Real-time updates
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=3002
REAL_TIME_UPDATES=true

# UI preferences
DEFAULT_THEME=light
ENABLE_DARK_MODE=true
DASHBOARD_REFRESH_INTERVAL=5000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core features
MULTI_PROJECT_SUPPORT=true
CONTAINER_ISOLATION=true
REAL_TIME_MONITORING=true
ADVANCED_SECURITY=true

# Experimental features
PERFORMANCE_OPTIMIZATION=false
EXPERIMENTAL_FEATURES=false
AI_POWERED_SUGGESTIONS=true

# Agent features
AGENT_COLLABORATION=true
AUTONOMOUS_DEPLOYMENT=false
CROSS_PROJECT_LEARNING=false

# =============================================================================
# PERFORMANCE AND OPTIMIZATION
# =============================================================================

# Caching
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000
ENABLE_QUERY_CACHING=true

# Background processing
WORKER_CONCURRENCY=5
JOB_QUEUE_SIZE=100
BACKGROUND_TASKS_ENABLED=true

# Resource optimization
ENABLE_COMPRESSION=true
OPTIMIZE_IMAGES=true
BUNDLE_MINIFICATION=true

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Recovery settings
AUTO_RECOVERY_ENABLED=true
HEALTH_CHECK_FAILURES_THRESHOLD=3
RECOVERY_TIMEOUT_SECONDS=300
