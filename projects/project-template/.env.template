# Project Environment Configuration Template
# Copy this file to .env and update the values for your specific project

# Project Identification
PROJECT_ID=
PROJECT_NAMESPACE=
PROJECT_TYPE=web|mobile|fullstack

# Development Environment
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration (if needed)
DATABASE_URL=
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=
DB_PASSWORD=
DB_DATABASE=

# API Keys and External Services
# (These will be project-specific and should never be committed)
OPENAI_API_KEY=your_gpt_api_key_here
ANTHROPIC_API_KEY=your_claude_api_key_here
EXTERNAL_API_KEY=

# Convex Integration
CONVEX_URL=http://convex-backend:3210
CONVEX_DEPLOYMENT=

# Security Configuration
JWT_SECRET=
ENCRYPTION_KEY=
SESSION_SECRET=

# Third-party Services
STRIPE_API_KEY=
SENDGRID_API_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
GOOGLE_ANALYTICS_ID=

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=
PROMETHEUS_ENDPOINT=

# Development Tools
WEBPACK_DEV_SERVER_HOST=0.0.0.0
WEBPACK_DEV_SERVER_PORT=3000
HOT_RELOAD_ENABLED=true

# Container Isolation
ISOLATION_LEVEL=high
RESOURCE_LIMITS_ENABLED=true
NETWORK_ISOLATION_ENABLED=true

# Agent Configuration
AGENT_LOGGING_ENABLED=true
AGENT_DEBUG_MODE=false
AGENT_RATE_LIMIT_ENABLED=true

# Build Configuration
BUILD_TARGET=development
OPTIMIZATION_LEVEL=basic
MINIFY_ENABLED=false
SOURCE_MAPS_ENABLED=true

# Testing Configuration
TEST_DATABASE_URL=
TEST_API_BASE_URL=http://localhost:3000
E2E_BASE_URL=http://localhost:3000
COVERAGE_THRESHOLD=80
