# Testing Environment Configuration
# Used for automated testing and CI/CD pipelines

# =============================================================================
# CORE SYSTEM CONFIGURATION
# =============================================================================

NODE_ENV=testing
SYSTEM_ID=autonomous_ai_agent_platform_test
INSTANCE_ID=test_runner

# =============================================================================
# CONVEX BACKEND CONFIGURATION
# =============================================================================

CONVEX_URL=http://localhost:3210
CONVEX_DEPLOYMENT=test-deployment

# =============================================================================
# AI SERVICE INTEGRATIONS (Mock/Test Keys)
# =============================================================================

# Use test/mock API keys for testing
OPENAI_API_KEY=test-openai-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0
OPENAI_RATE_LIMIT_PER_MINUTE=1000

ANTHROPIC_API_KEY=test-anthropic-key
ANTHROPIC_MODEL=claude-3-haiku-20240307
ANTHROPIC_MAX_TOKENS=1000
ANTHROPIC_TEMPERATURE=0
ANTHROPIC_RATE_LIMIT_PER_MINUTE=1000

DEFAULT_LLM_PROVIDER=auto
LLM_FALLBACK_ENABLED=false

# =============================================================================
# PROJECT ISOLATION CONFIGURATION  
# =============================================================================

PROJECTS_BASE_DIR=./test_projects
MAX_CONCURRENT_PROJECTS=3
PROJECT_ISOLATION_LEVEL=standard

# Container configuration for testing
DOCKER_HOST=unix:///var/run/docker.sock
BASE_PROJECT_PORT=40000
CONTAINER_REGISTRY_URL=localhost:5000

# Minimal resource limits for testing
DEFAULT_MEMORY_LIMIT=256M
DEFAULT_CPU_LIMIT=0.5
DEFAULT_STORAGE_LIMIT=1G
MAX_MEMORY_LIMIT=1G
MAX_CPU_LIMIT=1.0
MAX_STORAGE_LIMIT=5G

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Test database configurations
DATABASE_URL=postgresql://test:test@localhost:5432/ai_agent_platform_test
DATABASE_MIN_CONNECTIONS=1
DATABASE_MAX_CONNECTIONS=5

REDIS_URL=redis://localhost:6379/1
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=5

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

LOG_LEVEL=warn
LOG_FORMAT=json
LOG_FILE_PATH=./test_logs/system.log
LOG_MAX_FILE_SIZE=10M
LOG_MAX_FILES=3

AGENT_LOGGING_ENABLED=false
AGENT_DEBUG_MODE=false

METRICS_ENABLED=false
METRICS_PORT=9091
HEALTH_CHECK_INTERVAL=60000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Test secrets - not secure, only for testing
JWT_SECRET=test-jwt-secret-not-secure
SESSION_SECRET=test-session-secret-not-secure
API_KEY_LENGTH=16

ENCRYPTION_KEY=test-encryption-key-not-secure
ENCRYPT_SENSITIVE_DATA=false

CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=1000
RATE_LIMIT_MAX_REQUESTS=10000
ENABLE_RATE_LIMITING=false

# =============================================================================
# EXTERNAL SERVICES (Testing)
# =============================================================================

# Mock/disabled external services for testing
SERPAPI_KEY=test-serpapi-key
TAVILY_API_KEY=test-tavily-key
SONARQUBE_TOKEN=
CODECLIMATE_API_KEY=

# Disabled notification services for testing
SLACK_WEBHOOK_URL=
EMAIL_SERVICE_API_KEY=
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# Mock cloud storage for testing
AWS_ACCESS_KEY_ID=test-access-key
AWS_SECRET_ACCESS_KEY=test-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=test-bucket

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test-specific settings
TEST_TIMEOUT=10000
TEST_PARALLEL_WORKERS=2
COVERAGE_THRESHOLD=80
E2E_HEADLESS=true
E2E_BASE_URL=http://localhost:30000

# Mock services
MOCK_EXTERNAL_APIS=true
MOCK_LLM_RESPONSES=true
MOCK_CONTAINER_OPERATIONS=true

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================

DASHBOARD_PORT=30001
DASHBOARD_HOST=127.0.0.1
DASHBOARD_BASE_URL=http://localhost:30001

WEBSOCKET_ENABLED=false
WEBSOCKET_PORT=30002
REAL_TIME_UPDATES=false

DEFAULT_THEME=light
ENABLE_DARK_MODE=false
DASHBOARD_REFRESH_INTERVAL=60000

# =============================================================================
# FEATURE FLAGS (Testing)
# =============================================================================

MULTI_PROJECT_SUPPORT=true
CONTAINER_ISOLATION=false
REAL_TIME_MONITORING=false
ADVANCED_SECURITY=false

PERFORMANCE_OPTIMIZATION=false
EXPERIMENTAL_FEATURES=true
AI_POWERED_SUGGESTIONS=false

AGENT_COLLABORATION=true
AUTONOMOUS_DEPLOYMENT=false
CROSS_PROJECT_LEARNING=false

# =============================================================================
# PERFORMANCE AND OPTIMIZATION (Testing)
# =============================================================================

CACHE_TTL_SECONDS=10
CACHE_MAX_SIZE=100
ENABLE_QUERY_CACHING=false

WORKER_CONCURRENCY=1
JOB_QUEUE_SIZE=10
BACKGROUND_TASKS_ENABLED=false

ENABLE_COMPRESSION=false
OPTIMIZE_IMAGES=false
BUNDLE_MINIFICATION=false

# =============================================================================
# BACKUP AND RECOVERY (Testing)
# =============================================================================

BACKUP_ENABLED=false
BACKUP_INTERVAL=1h
BACKUP_RETENTION_DAYS=1
BACKUP_STORAGE_PATH=./test_backups

AUTO_RECOVERY_ENABLED=false
HEALTH_CHECK_FAILURES_THRESHOLD=10
RECOVERY_TIMEOUT_SECONDS=30
